@model List<Product>
<partial name="_Notification" />

<div class="container">
    <div class="row pt-4 pb-3">

        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-node-plus-fill"></i>  Create New Product
         </a>
        </div>

    </div>


<table class="table table-bordered tabletable-striped">

    <thead>
    <tr>
                <th> Title</th>
                <th> ISBN</th>
                <th> Price</th>
                <th> Author</th>
                <th> Category</th>
       
        <th></th>


    </tr>
        </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            
        
        <tr>
           <td>@obj.Title</td>
           <td>@obj.ISBN</td>
                    <td>@obj.Author</td>
                    <td>@obj.ListPrice</td>
                    <td></td>
           <td>
               <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                   </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash2-fill"></i>Delete
                            </a>

               </div>

           </td>
        </tr>
        }

    </tbody>

</table>

</div>
