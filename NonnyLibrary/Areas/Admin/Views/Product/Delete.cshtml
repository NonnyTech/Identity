@model Product

<form method="post">
    <div class="boarder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Category</h2>
            <hr />
        </div>
       

       <div class="mb-3 row p-1">
                <label asp-for="Title" class="pb-0"></label>
            <input asp-for="Title" class="form-control" />
           

            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Author" class="pb-0" ></label>
            <input asp-for="Author" class="form-control" />
           

             </div>
        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="pb-0"></label>
            <input asp-for="ISBN" class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="pb-0"></label>
            <input asp-for="Price" class="form-control" />
            
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="pb-0"></label>
            <input asp-for="ListPrice" class="form-control" />
           

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price50" class="pb-0"></label>
            <input asp-for="Price50" class="form-control" />
           
        </div
        <div class="mb-3 row p-1">
            <label asp-for="Price100" class="pb-0"></label>
            <input asp-for="Price100" class="form-control" />
           

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control"> Delete </button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-danger border form-control">
                    Back to Category List
                </a>

            </div>

        </div>





    </div>





</form>